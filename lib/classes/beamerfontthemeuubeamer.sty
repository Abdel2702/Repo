\mode<presentation>
\newif\if@opensans
\newif\if@merriweather
\DeclareOptionBeamer{opensans}{\@opensanstrue}
\DeclareOptionBeamer{merriweather}{\@merriweathertrue}
\ProcessOptionsBeamer
\relax
\if@merriweather
  \RequirePackage{merriweather}
\else
  \if@opensans
    \RequirePackage[rm]{merriweather}
    \RequirePackage[defaultsans]{opensans}
  \else
    \relax
  \fi
\fi
\setbeamerfont*{title}{shape=\itshape,family=\rmfamily,size=\LARGE}
\setbeamerfont*{author}{series=\bfseries}
\setbeamerfont*{title page}{size=\scriptsize}
\setbeamerfont*{frametitle}{series=\bfseries,size=\Large}
\mode
<all>
